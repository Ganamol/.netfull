@{
}
@using Modeltest.Models;
@model List<Student>;
<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th>
            Status
        </th>
    </tr>
    @foreach (var item in Model)
            {
<tr>
    <td>
        @item.Id
    </td>
    <td>@item.name</td>
    <td>@item.marks</td>
    @if (item.marks > 35)
    {
        <td>Passed</td>
    }
    else
    {
        <td>Failed</td>
    }
</tr>
    }
           
</table>
<style>

    table,td,th
    {
        border:2px solid black
    }

</style>